{
	"compilerOptions": {
		"baseUrl": "./src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@util/*": ["util/*"]
		}
	},
	"include": ["**/*.ts"]
}
